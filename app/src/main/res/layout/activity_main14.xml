<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity14">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <!--animation1-->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bugs_bunny"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <!--animation2-->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/funnyicon"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <!--animation3-->
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_success"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <!--animation4-->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/bunny"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <!--animation5-->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/irancicleflag"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lottie1"
                app:lottie_loop="true"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/lottie1"
                app:lottie_autoPlay="true"/>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Animation"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>